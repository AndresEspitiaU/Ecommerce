@model Ecommerce.BD.Models.Descuento

@{
    ViewData["Title"] = "Editar Descuento";
    Layout = "_AdminLayout";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">Editar Descuento</h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Editar" method="post">
                <input type="hidden" asp-for="DescuentoId" />

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="DesNombre" class="form-label">Nombre del Descuento</label>
                        <input asp-for="DesNombre" class="form-control" required />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="DesPorcentaje" class="form-label">Porcentaje de Descuento (%)</label>
                        <input asp-for="DesPorcentaje" class="form-control" type="number" step="0.01" required />
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="DesDescripcion" class="form-label">Descripción</label>
                    <textarea asp-for="DesDescripcion" class="form-control" rows="4"></textarea>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="DesActivo" class="form-check-input" type="checkbox" />
                    <label asp-for="DesActivo" class="form-check-label">Activo</label>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Cancelar
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Guardar Cambios
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
