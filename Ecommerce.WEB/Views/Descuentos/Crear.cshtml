@model Ecommerce.BD.Models.Descuento

@{
    ViewData["Title"] = "Crear Nuevo Descuento";
    Layout = "_AdminLayout";
}

<div class="container-fluid mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-center">
                    <h3 class="text-white">Crear Nuevo Descuento</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Crear" method="post">
                        <div class="mb-3">
                            <label asp-for="DesNombre" class="form-label">Nombre del Descuento</label>
                            <input asp-for="DesNombre" class="form-control form-control-lg" placeholder="Ej: Descuento Primavera" required />
                        </div>
                        <div class="mb-3">
                            <label asp-for="DesDescripcion" class="form-label">Descripción</label>
                            <textarea asp-for="DesDescripcion" class="form-control" rows="4" placeholder="Describe el descuento aquí..."></textarea>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="DesPorcentaje" class="form-label">Porcentaje de Descuento (%)</label>
                                <input asp-for="DesPorcentaje" class="form-control form-control-lg" type="number" step="0.01" required />
                            </div>
                            <div class="col-md-6 d-flex align-items-center">
                                <div class="form-check form-switch">
                                    <input asp-for="DesActivo" class="form-check-input" type="checkbox" />
                                    <label asp-for="DesActivo" class="form-check-label ms-2">Activo</label>
                                </div>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-check-circle"></i> Guardar Descuento
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Custom scripts can go here, for example, validating input or enhancing the UX
    </script>
}
