@model Ecommerce.BD.Models.Cupone

@{
    ViewData["Title"] = "Crear Cupón";
    Layout = "_AdminLayout";
}

<div class="container-fluid mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-primary ">
                    <h3 class="mb-0 text-center text-white">Crear Nuevo Cupón</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Crear" method="post">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-floating mb-3">
                                    <input asp-for="CupCodigo" class="form-control" id="CupCodigo" placeholder="Código del Cupón" required />
                                    <label for="CupCodigo">Código del Cupón</label>
                                    <span asp-validation-for="CupCodigo" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-floating mb-3">
                                    <input asp-for="CupDescripcion" class="form-control" id="CupDescripcion" placeholder="Descripción del Cupón" />
                                    <label for="CupDescripcion">Descripción</label>
                                    <span asp-validation-for="CupDescripcion" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="CupPorcentajeDescuento" class="form-control" id="CupPorcentajeDescuento" placeholder="Porcentaje de Descuento (%)" type="number" step="0.01" />
                                    <label for="CupPorcentajeDescuento">Porcentaje de Descuento (%)</label>
                                    <span asp-validation-for="CupPorcentajeDescuento" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="CupMontoDescuento" class="form-control" id="CupMontoDescuento" placeholder="Monto de Descuento" type="number" step="0.01" />
                                    <label for="CupMontoDescuento">Monto de Descuento</label>
                                    <span asp-validation-for="CupMontoDescuento" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="CupFechaInicio" class="form-control" id="CupFechaInicio" placeholder="Fecha de Inicio" type="date" />
                                    <label for="CupFechaInicio">Fecha de Inicio</label>
                                    <span asp-validation-for="CupFechaInicio" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="CupFechaExpiracion" class="form-control" id="CupFechaExpiracion" placeholder="Fecha de Expiración" type="date" />
                                    <label for="CupFechaExpiracion">Fecha de Expiración</label>
                                    <span asp-validation-for="CupFechaExpiracion" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-check form-switch mb-3">
                                    <input asp-for="CupActivo" class="form-check-input" id="CupActivo" />
                                    <label class="form-check-label" for="CupActivo">Activo</label>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="fas fa-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-check-circle"></i> Crear Cupón
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

