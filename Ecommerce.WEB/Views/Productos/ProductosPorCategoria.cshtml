@model IEnumerable<Ecommerce.BD.Models.Producto>

<div class="container-fluid my-5">
    <!-- Título de la sección -->
    <h2 class="text-center mb-5 fw-bold">Productos de la Categoría</h2>

    <!-- Breadcrumb debajo del título -->
    <div class="row justify-content-center mb-4">
        <div class="col-lg-8">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb bg-white p-3 rounded">
                    <li class="breadcrumb-item">
                        @Html.ActionLink("Inicio", "Index", "Home")
                    </li>
                    <li class="breadcrumb-item">
                        @Html.ActionLink("Categorías", "Index", "Categorias")
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Productos</li>
                </ol>
            </nav>
        </div>
    </div>

    <!-- Lista de productos -->
    @if (Model != null && Model.Any())
    {
        <div class="row g-4">
            @foreach (var producto in Model)
            {
                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="card h-100 shadow-sm border-0">
                        <img src="@producto.ProImagenUrl" class="card-img-top" alt="@producto.ProNombre">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title fw-bold text-center text-truncate">@producto.ProNombre</h5>
                            <p class="card-text text-center mb-2 text-primary fw-bold">@producto.ProPrecio.ToString("C")</p>
                            <a href="@Url.Action("DetalleProducto", "Home", new { id = producto.ProductoId })" class="text-decoration-none">
                                <h5 class="product-title fw-bold">@producto.ProNombre</h5>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center">
            No se encontraron productos en esta categoría.
        </div>
    }
</div>
