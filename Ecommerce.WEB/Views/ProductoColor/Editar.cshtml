@model Ecommerce.BD.Models.Producto

@{
    ViewData["Title"] = "Editar Colores del Producto";
    Layout = "_AdminLayout";
}

<div class="container my-5">
    <div class="d-flex justify-content-center">
        <div class="card border-0 shadow-sm p-4" style="max-width: 600px; width: 100%;">
            <div class="text-center mb-4">
                <h2 class="fw-bold text-primary">Editar Colores del Producto</h2>
            </div>
            <form asp-action="Editar" method="post">
                <!-- ProductoId oculto -->
                <input type="hidden" name="ProductoId" value="@Model.ProductoId" />

                <!-- Nombre del Producto (solo lectura) -->
                <div class="form-floating mb-4">
                    <input type="text" class="form-control" id="ProductoNombre" value="@Model.ProNombre" readonly />
                    <label for="ProductoNombre">Producto</label>
                </div>

                <!-- Selección de Colores como Checkbox -->
                <div class="mb-4">
                    <label class="form-label fw-semibold">Colores</label>
                    <div class="d-flex flex-wrap gap-2">
                        @foreach (var color in ViewData["Colores"] as MultiSelectList)
                        {
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="checkbox" name="ColorIds" value="@color.Value" id="color_@color.Value" @(color.Selected ? "checked" : "")>
                                    <label class="form-check-label" for="color_@color.Value">@color.Text</label>
                                </div>
                        }
                    </div>
                </div>

                <!-- Botón Guardar -->
                <div class="d-grid">
                    <button type="submit" class="btn btn-success btn-lg">Guardar Cambios</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
        <style>
            .card {
                border-radius: 12px;
                background-color: #f9f9f9;
            }

            .form-check-label {
                padding-left: 10px;
                font-size: 1rem;
                font-weight: 500;
            }

            .form-floating label {
                font-size: 0.875rem;
                padding-left: 1rem;
                color: #6c757d;
            }

            .form-check-input {
                margin-right: 5px;
            }

            .btn-success {
                background-color: #28a745;
                border-color: #28a745;
            }

            .btn-success:hover {
                background-color: #218838;
                border-color: #1e7e34;
            }
        </style>
}
