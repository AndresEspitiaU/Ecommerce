@model Ecommerce.BD.Models.ProductoColor
@{
    ViewData["Title"] = "Asociar Color a Producto";
    Layout = "_AdminLayout";
}

<div class="container my-5">
    <div class="d-flex justify-content-center">
        <div class="card border-0 shadow-sm p-4" style="max-width: 500px; width: 100%;">
            <div class="text-center mb-4">
                <h2 class="fw-bold text-primary">Asociar Color a Producto</h2>
                <p class="text-muted">Seleccione el producto y color que desea asociar</p>
            </div>
            <form asp-action="Crear" method="post">
                <!-- Selección de Producto -->
                <div class="form-floating mb-3">
                    <select asp-for="ProductoId" asp-items="ViewBag.Productos" class="form-select" id="floatingProducto">
                        <option value="">Seleccione un producto</option>
                    </select>
                    <label for="floatingProducto">Producto</label>
                    <span asp-validation-for="ProductoId" class="text-danger"></span>
                </div>

                <!-- Selección de Color -->
                <div class="form-floating mb-3">
                    <select asp-for="ColorId" asp-items="ViewBag.Colores" class="form-select" id="floatingColor">
                        <option value="">Seleccione un color</option>
                    </select>
                    <label for="floatingColor">Color</label>
                    <span asp-validation-for="ColorId" class="text-danger"></span>
                </div>

                <!-- Botón de Enviar -->
                <div class="d-grid">
                    <button type="submit" class="btn btn-success btn-lg">Asociar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

@section Styles {
    <style>
        .card {
            border-radius: 12px;
            background-color: #f9f9f9;
        }

        .form-floating label {
            font-size: 0.875rem;
            padding-left: 1rem;
            color: #6c757d;
        }

        .form-select {
            padding: 12px;
            font-size: 1rem;
            border-radius: 8px;
        }

        .btn-success {
            background-color: #28a745;
            border-color: #28a745;
        }

            .btn-success:hover {
                background-color: #218838;
                border-color: #1e7e34;
            }
    </style>
}
