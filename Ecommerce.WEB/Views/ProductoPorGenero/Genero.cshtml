@model IEnumerable<Ecommerce.BD.Models.Producto>

<div class="container my-5">
    <h2 class="text-center mb-4">Productos para @ViewData["Genero"]</h2>

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var producto in Model)
            {
                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="card mb-4">
                        <img src="@producto.ProImagenUrl" class="card-img-top" alt="@producto.ProNombre">
                        <div class="card-body">
                            <h5 class="card-title">@producto.ProNombre</h5>
                            <p class="card-text">Precio: $@producto.ProPrecio</p>
                            <a href="@Url.Action("DetalleProducto", "Producto", new { id = producto.ProductoId })" class="btn btn-primary">Ver Detalle</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center">
            No se encontraron productos para este género.
        </div>
    }
</div>
